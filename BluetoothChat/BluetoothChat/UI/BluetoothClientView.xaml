<helpers:NavigablePage
    x:Class="BluetoothChat.UI.BluetoothClientView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:BluetoothChat.Converters"
    xmlns:customControls="using:BluetoothChat.CustomControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:enumeration="using:Windows.Devices.Enumeration"
    xmlns:helpers="using:BluetoothChat.Helpers"
    xmlns:local="using:BluetoothChat.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <helpers:NavigablePage.Resources>
        <converters:EnumToVisibilityConverter x:Key="EnumToVisibilityConverter" />
    </helpers:NavigablePage.Resources>
    <Grid VerticalAlignment="Stretch">
        <customControls:BackgroundImageControl
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch" />
        <Grid x:Name="ConnectToDeviceView" Visibility="{x:Bind Vm.ClientViewType, Mode=OneWay, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter='BluetoothConnectView'}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <ListView
                    Grid.Row="1"
                    helpers:ItemClickCommand.Command="{x:Bind Vm.DeviceSelectedCommand}"
                    IsItemClickEnabled="True"
                HorizontalAlignment="Center"
                HorizontalContentAlignment="Center"
                    ItemsSource="{x:Bind Vm.AvailableDevices, Mode=OneWay}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="enumeration:DeviceInformation">
                        <TextBlock Text="{x:Bind Name}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button
                    Grid.Row="3"
                    Width="216"
                    Height="50"
                    HorizontalAlignment="Center"
                    Command="{x:Bind Vm.StartSearch, Mode=OneWay}"
                    Content="Start Search" />

            <Button
                    Grid.Row="4"
                    Width="216"
                    Height="50"
                    HorizontalAlignment="Center"
                        Command="{x:Bind Vm.StopSearch, Mode=OneWay}"
                        Content="Stop Search" />
        </Grid>
        <Grid x:Name="Chatview" Visibility="{x:Bind Vm.ClientViewType, Mode=OneWay, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter='ChatView'}">
            <Grid>
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            Margin="0,0,0,10"
                            Text="Connected to: "
                            TextWrapping="Wrap" />
                        <TextBlock Text="{x:Bind Vm.BluetoothDevice.Name, Mode=OneWay}" />
                    </StackPanel>
                    <Button Command="{x:Bind Vm.DisconnectCommand, Mode=OneWay}" Content="Disconnect" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.ColumnSpan="2" TextWrapping="Wrap">Enter a message to send:</TextBlock>
                        <TextBox
                            x:Name="MessageTextBox"
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="0,10,10,0"
                            KeyDown="KeyboardKey_Pressed" />
                        <Button
                            x:Name="SendButton"
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="5,10,10,0"
                            Click="SendButton_OnClick"
                            Content="Send" />
                        <ListBox
                            Grid.Row="2"
                            Grid.ColumnSpan="2"
                            Margin="0,10,0,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            ItemsSource="{x:Bind Vm.MessageBoxList, Mode=OneWay}"
                            ScrollViewer.HorizontalScrollBarVisibility="Auto"
                            ScrollViewer.HorizontalScrollMode="Auto" />
                    </Grid>
                </StackPanel>
            </Grid>
        </Grid>
        <customControls:LoadingSpinner
             VerticalAlignment="Stretch"
             IsExecuting="{Binding LoadingTask.IsExecuting, Mode=OneWay}" />
    </Grid>
</helpers:NavigablePage>